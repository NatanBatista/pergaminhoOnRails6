<body>
  <main>
    <h1>Pergaminho<i class="fa-solid fa-book"></i></h1>
    <div class="pesquisa">
      <input
        class="barra-de-pesquisa"
        type="search"
        placeholder="Buscar por tÃ­tulo, autor, obra..."
      />
      <button class="pesquisa-btn" type="button">
        Pesquisar
      </button>
    </div>
    <%= pluralize(@books.size, "Livro", "Livros")%>
    <div>
