<%= simple_form_for category do |form| %>
  <%= form.error_notification %>
  <%= form.error_notification message: form.object.errors[:base].to_sentence if form.object.errors[:base].present? %>

  <div class="container form_livro">
    <%= form.input :name, placeholder: 'Nome', autofocus: true %>
    <%= form.button :submit, "Atualizar Categoria", class: 'entrar' %>
  </div>
<% end %>
