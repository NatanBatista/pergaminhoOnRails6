<div class="container">
  <h1>Categorias</h1>

  <div id="categories">
    <% @categories.each do |category| %>
      <div class="container amostra_catg">
        <%= render category %>
        <p>
          <%= link_to "Mostrar categoria", category %>
        </p>
      </div>
      
    <% end %>
  </div>

  <%= link_to "Criar nova categoria", new_category_path %>
  <%= render 'pagination' %>
</div>
