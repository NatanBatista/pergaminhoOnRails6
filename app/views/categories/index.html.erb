<div class="container">
  <h1>Categorias</h1>

  <div id="categories">
    <% @categories.each do |category| %>
      <div class="container amostra_catg">
        <%= render category %>
        <div>
        <p>
          <%= link_to 'Editar', edit_category_path(category), class:"ctg_links"%>
          <%= link_to 'Excluir categoria', category, method: :delete, data: { confirm: 'VocÃª quer deletar?' }, class:"ctg_links"%>
        </p>
        </div>
      </div>
      
    <% end %>
  </div>

  <%= link_to "Criar nova categoria", new_category_path %>
  <%= render 'pagination' %>
</div>
