    <body>
    <div class="main-login">
      <div class="header">
        <div class="titulo">
          <h1>Pergaminho<i class="fa-solid fa-book"></i></h1>
        </div>
        <div class="subtitulo">
          <h2>
            Sistema online da Biblioteca Central da Universidade Federal de
            Alpiste
          </h2>
        </div>
      </div>
      <div class="barra-login">

        <h2>Entrar no sistema</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="login">
          <%= f.input :email,
              required: false,
              autofocus: true,
              input_html: { autocomplete: "email" },
              placeholder: 'Email', class: "matricula"%>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" },
                      placeholder: 'Senha', class: "senha" %>
          <%= f.button :submit, "Entrar", class: "entrar"%>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <% end %>
        <p class="cadastro-txt">
          NÃ£o possui uma conta?
          <%= render "devise/shared/links" %>
        </p>
      </div>
    </div>
